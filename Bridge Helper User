            z-index: 100000;
            width: 800px;
            font-family: Arial, sans-serif;
            max-height: calc(100vh - 120px);
            overflow-y: auto;
            transition: all 0.3s ease;
        }
        .adapt-helper-button {
            background: #00A8E1;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            position: fixed;
            top: 50px;
            right: 10px;
            z-index: 999999;
        }
        .pre-rc-section {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 4px;
            background-color: #f9f9f9;
            transition: all 0.3s ease;
        }
        .pre-rc-section.answered {
            padding: 8px;
            margin-bottom: 8px;
        }
        .pre-rc-section.answered .section-content {
            display: none;
        }
        .pre-rc-section.answered .section-summary {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .section-summary {
            display: none;
            font-size: 0.9em;
            color: #666;
            flex: 1;
        }
        .summary-container {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
        }
        .edit-button {
            background: #00A8E1;
            color: white;
            border: none;
            padding: 3px 8px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
            margin-left: auto;
        }
        .edit-button:hover {
            background: #0088B4;
        }
        .checkmark {
            color: #4CAF50;
            font-weight: bold;
            margin-right: 5px;
        }
        .confirm-button {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 5px;
            display: none;
        }
        .section-title {
            font-weight: bold;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .question-text {
            font-size: 12px;
            color: #666;
